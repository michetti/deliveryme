<% content_for :head do %>
  <%= stylesheet_link_tag "devise", media: "all", "data-turbolinks-track" => true %>
<% end %>

<%= form_for resource,
             as: resource_name,
             url: password_path(resource_name),
             html: { method: :put, class: "form-devise" } do |f| %>

  <h2 class="form-devise-heading">Change your password</h2>

  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.email_field :email,
                    require: true,
                    autofocus: true,
                    placeholder: "Email address",
                    class: "form-control" %>

  <%= f.password_field :password,
                       placeholder: "New Password",
                       class: "form-control" %>

  <%= f.password_field :password_confirmation,
                       placeholder: "Password Confirmation",
                       class: "form-control" %>

  <%= f.submit "Change my password", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "/users/shared/links" %>
