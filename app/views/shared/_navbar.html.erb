<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><%= personalization :name %></a>
    </div>
    <div class="collapse navbar-collapse">

      <ul class="nav navbar-nav">
        <% if can? :index, Restaurant %>
          <%= menu_item "Restaurants", restaurants_path, :restaurants %>
        <% end %>

        <% if can? :index, Product %>
          <%= menu_item "Products", products_path, :products %>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign Out", destroy_session_path(current_user), :method => :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
