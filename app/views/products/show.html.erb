<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @product.title %></h1>
    </div>
    <div class="col-md-6">
      <div class="btn-group pull-right">
        <%= render "actions", product: @product, enabled: [:delete, :edit, :show, :list, :new] %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= image_tag @product.photo.url(:thumb), class: "media-object img-thumbnail" %>
  </div>

  <div class="col-md-10">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @product.description %></dd>
    
      <dt>Price</dt>
      <dd><%= number_to_currency @product.price %></dd>
    
      <dt>Tag List</dt>
      <dd><%= @product.tag_list %></dd>
    </dl>
  </div>
</div>


