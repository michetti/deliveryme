<% content_for :head_additional do %>
  <%= stylesheet_link_tag "devise", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "signin", media: "all", "data-turbolinks-track" => true %>
<% end %>

<%= form_for resource,
             as: resource_name,
             url: session_path(resource_name),
             html: { class: "form-devise" } do |f| %>

  <h2 class="form-devise-heading">Please sign in</h2>

  <%= devise_error_messages! %>

  <%= f.email_field :email,
                    require: true,
                    autofocus: true,
                    placeholder: "Email address",
                    class: "form-control" %>

  <%= f.password_field :password,
                       placeholder: "Password",
                       class: "form-control" %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </label>
  <% end -%>

  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "/users/shared/links" %>
