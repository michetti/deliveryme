<div class="form-group <%= has_error? f.object, :name %>">
  <%= f.label :title, class: "control-label col-md-2" %>
  <div class="col-md-10">
    <%= f.text_field :name, class: "form-control", autofocus: true %>
    <%= error_message f.object, :name %>
  </div>
</div>

