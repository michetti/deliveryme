<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Edit Restaurant</h1>
    </div>
    <div class="col-md-6">
      <div class="btn-group pull-right">
        <%= render "actions", restaurant: @restaurant, enabled: [:delete, :show, :list, :new] %>
      </div>
    </div>
  </div>
</div>


<%= form_for @restaurant, html: { class: "form-horizontal" } do |f| %>

  <div class="row">
    <div class="col-sm-12 col-md-10">
      <%= render "restaurant_fields", f: f %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 col-md-8">
      <%= f.submit "Update", class: "btn btn-default pull-right" %>
    </div>
  </div>
  
<% end %>
